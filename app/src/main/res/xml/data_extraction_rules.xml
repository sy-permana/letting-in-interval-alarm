<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include the Room database for cloud backup -->
        <include domain="database" path="letting_in_database" />
        <include domain="database" path="letting_in_database-shm" />
        <include domain="database" path="letting_in_database-wal" />
        
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include the Room database for device-to-device transfer -->
        <include domain="database" path="letting_in_database" />
        <include domain="database" path="letting_in_database-shm" />
        <include domain="database" path="letting_in_database-wal" />
        
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
